{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataShareAccountName": {
            "type": "String",
            "metadata": {
                "description": "Data share account name should have length of 3 - 90, and cannot contain <>%&:\\?/#*$^();,.|-+={}[]!~@"
            }
        },
        "location": {
            "type": "String"
        },
        "shareName": {
            "type": "String",
            "metadata": {
                "description": "Name can only contain alphanumeric characters, hyphen and underscore"
            }
        },
        "datasetName": {
            "type": "String",
            "metadata": {
                "description": "Dataset name can only contain number, letters, - and _"
            }
        },
        "roleNameGuid": {
            "type": "string",
            "metadata": {
                "description": "A new GUID used to identify the role assignment"
            }
        },
        "currentTime": {
            "type": "string"
        },
        "storagedataShareAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the storage account to be shared"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.DataShare/accounts",
            "apiVersion": "2019-11-01",
            "name": "[parameters('dataShareAccountName')]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[parameters('roleNameGuid')]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
                "principalId": "[reference(resourceId('Microsoft.DataShare/accounts', parameters('dataShareAccountName')), '2019-11-01', 'Full').identity.principalId]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DataShare/accounts', parameters('dataShareAccountName'))]"
            ]
        },
        {
            "type": "Microsoft.DataShare/accounts/shares",
            "apiVersion": "2019-11-01",
            "name": "[concat(parameters('dataShareAccountName'), '/', parameters('shareName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.DataShare/accounts', parameters('dataShareAccountName'))]",
                "[parameters('roleNameGuid')]"
            ],
            "properties": {
                "shareKind": "CopyBased"
            }
        },
        {
            "type": "Microsoft.DataShare/accounts/shares/dataSets",
            "apiVersion": "2019-11-01",
            "name": "[concat(parameters('dataShareAccountName'), '/',parameters('shareName'), '/',parameters('datasetName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.DataShare/accounts/shares', parameters('dataShareAccountName'), parameters('shareName'))]",
                "[resourceId('Microsoft.DataShare/accounts', parameters('dataShareAccountName'))]",
                "[parameters('roleNameGuid')]"
            ],
            "kind": "AdlsGen2FileSystem",
            "properties": {
                "fileSystem": "public",
                "subscriptionId": "6df48df0-802d-4891-9f31-7cc1879f3cb4",
                "resourceGroup": "[resourceGroup().name]",
                "storagedataShareAccountName": "[parameters('storagedataShareAccountName')]"
            }
        },
        {
            "type": "Microsoft.DataShare/accounts/shares/synchronizationSettings",
            "apiVersion": "2019-11-01",
            "name": "[concat(parameters('dataShareAccountName'), '/',parameters('shareName'), '/', 'synchronizationSetting')]",
            "dependsOn": [
                "[resourceId('Microsoft.DataShare/accounts/shares',parameters('dataShareAccountName'), parameters('shareName'))]",
                "[resourceId('Microsoft.DataShare/accounts', parameters('dataShareAccountName'))]",
                "[parameters('roleNameGuid')]"
            ],
            "kind": "ScheduleBased",
            "properties": {
                "recurrenceInterval": "Day",
                "synchronizationTime": "[parameters('currentTime')]"
            }
        }
    ]
}
