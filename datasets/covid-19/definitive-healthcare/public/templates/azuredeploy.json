{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "defaultValue": "demoPublicADF",
            "type": "string",
            "metadata": {
                "description": "The name you provide will be appended with a unique sting to make it globally available. The name can contain only letters, numbers and hyphens. The first and last characters must be a letter or number. Spaces are not allowed."
            }
        },
        "storageAccountName": {
            "defaultValue": "demopubsa",
            "type": "string",
            "metadata": {
                "description": "The name you provide will be appended with a unique sting to make it globally available. The field can contain only lowercase letters and numbers. Name must be between 1 and 11 characters."
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string",
            "metadata": {
                "description": "Location of the data factory. Currently, only East US, East US 2, and West Europe are supported. "
            }
        },
        "doYouWantToWriteCuratedDataToSQLDatabase": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "metadata": {
                "description": "Please specify if you want to write curated data into SQL database."
            }
        },
        "serverName": {
            "type": "string",
            "metadata": {
                "description": "The name you provide will be appended with a unique sting to make it globally available. Your server name can contain only lowercase letters, numbers, and '-', but can't start or end with '-' or have more than 50 characters."
            },
            "defaultValue": "Specify SQL server name if selected 'Yes'"
        },
        "databaseName": {
            "type": "string",
            "metadata": {
                "description": "Value should not match special patterns. It should contain a length of maximum of 128."
            },
            "defaultValue": "Specify SQL database name if selected 'Yes'"
        },
        "sqlAdministratorLogin": {
            "type": "string",
            "metadata": {
                "description": "Your login name must not contain a SQL Identifier or a typical system name (like admin, administrator, sa, root, dbmanager, loginmanager, etc.) or a built-in database user or role (like dbo, guest, public, etc.)"
            },
            "defaultValue": "Specify administrator username of SQL server if selected 'Yes'"
        },
        "sqlAdministratorLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Your password must be at least 8 characters in length. Your password must contain characters from three of the following categories â€“ English uppercase letters, English lowercase letters, numbers (0-9), and non-alphanumeric characters (!, $, #, %, etc.) Your password cannot contain all or part of the login name. Part of a login name is defined as three or more consecutive alphanumeric characters."
            },
            "defaultValue": "*********"
        },
        "currentTime": {
            "type": "string",
            "defaultValue": "[utcNow('u')]"
        },
        "notificationEmail": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Please specify comma separated email addresses on which you would like to receive the ADF pipeline alerts."
            }
        },
        "enableMicrosoftTeamsNotification": {
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "type": "string"
        },
        "logicAppName": {
            "defaultValue": "TeamsNotify",
            "type": "String"
        }
    },
    "variables": {
        "factoryName": "[concat(parameters('factoryName'), uniquestring(resourceGroup().id))]",
        "storageAccountName": "[concat(parameters('storageAccountName'), uniquestring(resourceGroup().id))]",
        "serverName": "[concat(parameters('serverName'), uniquestring(resourceGroup().id))]",
        "webHookUri": "https://null"
    },
    "resources": [
        {
            "name": "storageTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ayesha-kr/covid-one-click-deployment/dev-zahid/datasets/covid-19/definitive-healthcare/public/templates/storageAccount/azuredeploy.json"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "name": "sqlServerTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','storageTemplate')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ayesha-kr/covid-one-click-deployment/dev-zahid/datasets/covid-19/definitive-healthcare/public/templates/sqlServer/azuredeploy.json"
                },
                "parameters": {
                    "doYouWantToWriteCuratedDataToSQLDatabase": {
                        "value": "[parameters('doYouWantToWriteCuratedDataToSQLDatabase')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "sqlAdministratorLogin": {
                        "value": "[parameters('sqlAdministratorLogin')]"
                    },
                    "sqlAdministratorLoginPassword": {
                        "value": "[parameters('sqlAdministratorLoginPassword')]"
                    },
                    "databaseName": {
                        "value": "[parameters('databaseName')]"
                    },
                    "serverName": {
                        "value": "[variables('serverName')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('enableMicrosoftTeamsNotification'),'Yes')]",
            "name": "logicAppTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri": "https://raw.githubusercontent.com/ayesha-kr/covid-one-click-deployment/dev-zahid/datasets/covid-19/definitive-healthcare/customer/templates/logicApp/azuredeploy.json"
              },
              "parameters": {
                "location": {
                  "value": "[parameters('location')]"
                },
                "logicAppName": {
                    "value": "[parameters('logicAppName')]"
                }
              }
            }
        },
        {
            "condition": "[equals(parameters('enableMicrosoftTeamsNotification'),'Yes')]",
            "name": "dataFactoryTemplateWithTeamsNotif",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','sqlServerTemplate')]",
                "[resourceId('Microsoft.Resources/deployments','logicAppTemplate')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ayesha-kr/covid-one-click-deployment/dev-zahid/datasets/covid-19/definitive-healthcare/public/templates/dataFactory/azuredeploy.json"
                },
                "parameters": {
                    "factoryName": {
                        "value": "[variables('factoryName')]"
                    },
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "doYouWantToWriteCuratedDataToSQLDatabase": {
                        "value": "[parameters('doYouWantToWriteCuratedDataToSQLDatabase')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "sqlAdministratorLogin": {
                        "value": "[parameters('sqlAdministratorLogin')]"
                    },
                    "sqlAdministratorLoginPassword": {
                        "value": "[parameters('sqlAdministratorLoginPassword')]"
                    },
                    "databaseName": {
                        "value": "[parameters('databaseName')]"
                    },
                    "serverName": {
                        "value": "[variables('serverName')]"
                    },
                    "currentTime": {
                        "value": "[parameters('currentTime')]"
                    },
                    "notificationEmail": {
                        "value": "[parameters('notificationEmail')]"
                    },
                    "webHookUri": {
                        "value": "[reference('logicAppTemplate','2018-05-01').outputs.WebHookURI.value]"
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('enableMicrosoftTeamsNotification'),'No')]",
            "name": "dataFactoryTemplateWithoutTeamsNotif",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','sqlServerTemplate')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ayesha-kr/covid-one-click-deployment/dev-zahid/datasets/covid-19/definitive-healthcare/public/templates/dataFactory/azuredeploy.json"
                },
                "parameters": {
                    "factoryName": {
                        "value": "[variables('factoryName')]"
                    },
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "doYouWantToWriteCuratedDataToSQLDatabase": {
                        "value": "[parameters('doYouWantToWriteCuratedDataToSQLDatabase')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "sqlAdministratorLogin": {
                        "value": "[parameters('sqlAdministratorLogin')]"
                    },
                    "sqlAdministratorLoginPassword": {
                        "value": "[parameters('sqlAdministratorLoginPassword')]"
                    },
                    "databaseName": {
                        "value": "[parameters('databaseName')]"
                    },
                    "serverName": {
                        "value": "[variables('serverName')]"
                    },
                    "currentTime": {
                        "value": "[parameters('currentTime')]"
                    },
                    "notificationEmail": {
                        "value": "[parameters('notificationEmail')]"
                    },
                    "webHookUri": {
                        "value": "[reference('logicAppTemplate','2018-05-01').outputs.WebHookURI.value]"
                    }
                }
            }
        }
    ]
}
